<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:src="@mipmap/ic_launcher"
        android:id="@+id/item_player_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="Mbappe"
        android:id="@+id/item_player_name"
        app:layout_constraintTop_toTopOf="@id/item_player_avatar"
        app:layout_constraintLeft_toRightOf="@id/item_player_avatar"
        android:layout_marginLeft="@dimen/default_padding_half" />

</merge>